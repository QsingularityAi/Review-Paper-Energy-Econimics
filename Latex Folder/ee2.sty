\newcommand{\myfig}[5]{%
  \begin{figure}[#1]
    \begin{center}
      \includegraphics*[width=#2]{#3}
      \caption{\emph{#4}\label{#5}}
    \end{center}
  \end{figure}
}

\newcommand{\myfigb}[6]{%
  \begin{figure}[#1]
    \begin{center} 
      \includegraphics*[width=#2]{#3}
      \caption[\emph{#5}]{\emph{#4}\label{#6}}
    \end{center}
  \end{figure}
}


% Zwei Abbildungen in ein float
\newcommand{\myfigtwo}[9]{%
  \begin{figure}[#1]
    \parbox[t]{#2}{
      \includegraphics*[width=#2]{#3}
      \caption{#4\label{#5}}}
    \hfill
    \parbox[t]{#6}{
      \includegraphics*[width=#6]{#7}
      \caption{#8\label{#9}}}
  \end{figure}
}

